# Supabase (API keys — from Project Settings → API)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_random_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Twitter OAuth
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Blockchain (Testnet)
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
PRIVATE_KEY=your_deployer_private_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Game Server (web app needs NEXT_PUBLIC_GAME_SERVER_URL for Socket.io; game server uses REDIS_URL, FRONTEND_URL, SUPABASE_*, DATABASE_URL, POLYGON_*, NEXT_PUBLIC_GLADIATOR_NFT_ADDRESS)
NEXT_PUBLIC_GAME_SERVER_URL=http://localhost:4000
GAME_SERVER_URL=http://localhost:4000
GAME_SERVER_SECRET=generate_random_secret

# Redis (required by game server for Socket.io adapter; local dev: run redis-server or Docker on 6379)
REDIS_URL=redis://localhost:6379

# Database (Prisma) — NOT the same as API keys above.
# Get it: Supabase Dashboard → your project → Connect (or Settings → Database) → Connection string → URI.
# Use the database password you set when creating the project (or reset it under Settings → Database).
DATABASE_URL=postgresql://postgres:[YOUR-DB-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Arena (homepage status). Set to true when beta opens to show "Open for Battle!" instead of closed messages.
# NEXT_PUBLIC_ARENA_OPEN=true
